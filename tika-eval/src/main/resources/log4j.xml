<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true">

  <appender name="stdout" class="org.apache.log4j.ConsoleAppender"> 
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout"> 
      <!-- Pattern to output the caller's file name and line number -->
      <!--<param name="ConversionPattern" value="%5p [%t] (%F:%L) - %m%n"/>--> 
      <param name="ConversionPattern" value="%m%n"/> 
    </layout> 
  </appender> 

    <appender name="default.file" class="org.apache.log4j.FileAppender">
        <param name="file" value="logs/batch-process.log" />
        <param name="append" value="true" />
        <param name="threshold" value="info" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-4r %d [%t] %-5p %c %x - %m%n" />
        </layout>
    </appender>


    <appender name="batch.error.file" class="org.apache.log4j.FileAppender">
        <param name="file" value="logs/batch-process-error.xml" />
        <param name="threshold" value="error" />
        <param name="append" value="true" />
        <layout class="org.apache.log4j.xml.XMLLayout">
            <param name="LocationInfo" value="false" />
        </layout>
    </appender>


    <appender name="batch.warn.file" class="org.apache.log4j.FileAppender">
        <param name="file" value="logs/batch-process-warn.log" />
        <param name="append" value="true" />

        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-4r %d [%t] %-5p %c %x - %m%n" />
        </layout>
                 <filter class="org.apache.log4j.varia.LevelRangeFilter">
                        <param name="LevelMax" value="warn"/>
                        <param name="LevelMin" value="info"/>
                        <param name="AcceptOnMatch" value="true"/>
                </filter>

    </appender>



    <appender name="pdfbox.file" class="org.apache.log4j.FileAppender">
        <param name="file" value="logs/tika-batch-pdfbox.log" />
        <param name="append" value="true" />
        <param name="threshold" value="error" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-4r %d [%t] %-5p %c %x - %m%n" />
        </layout>
    </appender>

  <logger name="org.apache.tika.batch.StatusReporter" additivity="false">
    <level value="info"/>
    <appender-ref ref="stdout"/>
  </logger>

  <logger name="org.apache.pdfbox" additivity="false">
  	<level value="error"/>
  	<appender-ref ref="pdfbox.file"/>
  </logger>


  <logger name="org.apache.fontbox" additivity="false">
        <level value="error"/>
        <appender-ref ref="pdfbox.file"/>
  </logger>


  <logger name="org.apache.jempbox" additivity="false">
        <level value="error"/>
        <appender-ref ref="pdfbox.file"/>
  </logger>

  <logger name="org.apache.xmpbox" additivity="false">
        <level value="error"/>
        <appender-ref ref="pdfbox.file"/>
  </logger>

  <logger name="org.apache.tika.batch.FileResourceConsumer" additivity="true">
      <appender-ref ref="batch.warn.file"/>
      <appender-ref ref="batch.error.file"/>
  </logger>


    <root>
        <priority value="info" />
        <appender-ref ref="default.file" />
    </root>

</log4j:configuration>

